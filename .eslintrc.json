{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": [
			"./tsconfig.json",
			"./packages/*/tsconfig.json",
			"./apps/*/tsconfig.json"
		]
	}
}
