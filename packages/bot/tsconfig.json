{
	"extends": "../../tsconfig.json",
	"compilerOptions": {

		// Emit
		"inlineSources": true,
		"noEmitHelpers": true,
		"sourceMap": true,

		// Language and Environment
		"emitDecoratorMetadata": true,
		"lib": ["ESNext"],
		"target": "ESNext",
		"useDefineForClassFields": true,

		// Completeness
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true
	},
	"include": [
		"src/**/*.ts",
		"index.d.ts" 
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}