{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.{ts,tsx}"
  ],
  "exclude": [
    "tailwind.config.js"
  ]
}
