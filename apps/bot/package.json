{
	"name": "@economica/bot",
	"version": "0.1.0",
	"scripts": {
		"lint": "eslint .",
		"clean": "./node_modules/.bin/rimraf dist",
		"prebuild": "yarn run clean",
		"build": "esbuild ./src/index.ts --platform=node --format=esm --sourcemap --bundle --external:./node_modules/* --external:../../node_modules/* --outdir=dist",
		"start": "node --enable-source-maps --es-module-specifier-resolution=node --experimental-modules dist/index.js",
		"dev": "tsx src/index.ts",
		"docker": "docker compose --env-file ../../.env up --build --force-recreate"
	},
	"dependencies": {
		"@adrastopoulos/number-parser": "github:Adrastopoulos/Number-Parser",
		"@economica/api": "*",
		"@economica/common": "*",
		"@trpc/client": "^10.0.0-proxy-beta.26",
		"@trpc/server": "^10.0.0-proxy-beta.26",
		"discord-api-types": "^0.37.15",
		"discord.js": "^14.6.0",
		"dotenv": "^10.0.0",
		"esbuild": "^0.15.7",
		"ms": "^2.1.3",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@types/ms": "^0.7.31",
		"@types/node": "^17.0.21",
		"eslint": "^8.23.1",
		"rimraf": "^3.0.2",
		"tsx": "^3.11.0",
		"typescript": "^4.5.5"
	}
}
